{% extends 'base.html.twig' %}

{% block title %}TypeEvent index{% endblock %}

{% block body %}
    <h1>TypeEvent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_event in type_events %}
            <tr>
                <td>{{ type_event.id }}</td>
                <td>{{ type_event.title }}</td>
                <td>{{ type_event.type }}</td>
                <td>
                    <div>
                        {{ include('admin/type_event/_delete_form.html.twig') }} <a href="{{ path('type_event_edit', {'id': type_event.id}) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_event_new') }}">Create new</a>
{% endblock %}
