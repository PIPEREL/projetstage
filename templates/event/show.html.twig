{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Start</th>
                <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% if event.typeEvent.title != "indisponibilité" %}
             
            <tr>
                <th>Maxcandidate</th>
                <td>{{ event.maxcandidate }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('user') }}">back </a>

    {% if event.typeEvent.title == "indisponibilité" %}
             
    {{ include('event/_delete_form.html.twig') }}
          {% endif %}

 
{% endblock %}
